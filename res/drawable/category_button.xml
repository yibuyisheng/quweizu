<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <!-- <bitmap android:src="@drawable/big_btn_pressed"/> -->
        <shape android:shape="rectangle">
            <solid android:color="#eeeeee"/>
            <stroke android:width="1dp"  android:color="#d0d0d0"/> 
		    <corners android:radius="1dp" />
		    <size android:height="45dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <!-- <bitmap android:src="@drawable/big_btn"/> -->
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffffff" android:endColor="#e5e5e5" android:angle="270"/>
            <stroke android:width="1dp"  android:color="#d0d0d0"/> 
		    <corners android:radius="1dp" />
		    <size android:height="45dp"/>
        </shape>
    </item>
</selector>